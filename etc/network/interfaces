# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto br-inet
iface br-inet inet static
        bridge_ports eth0
        address 94.142.244.14
        netmask 255.255.255.0
        gateway 94.142.244.254
        post-up ip addr add 94.142.245.160/32 dev br-inet
        post-up ip addr add 94.142.245.161/32 dev br-inet
        post-up ip addr add 94.142.245.162/32 dev br-inet
        post-up ip addr add 94.142.245.163/32 dev br-inet
        post-down ip addr del 94.142.245.160/32 dev br-inet
        post-down ip addr del 94.142.245.161/32 dev br-inet
        post-down ip addr del 94.142.245.162/32 dev br-inet
        post-down ip addr del 94.142.245.163/32 dev br-inet

auto br-lxc
iface br-lxc inet static
        # Set this up as a bridge, but don't add any ports yet. Ports
        # will be added when lxc containers are created later on.
        bridge_ports none
        # Statically configure this bridge
        address 10.42.0.1
        netmask 255.255.255.0
