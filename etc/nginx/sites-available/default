# This redirects all unknown hosts requested on HTTP (e.g. all
# virtual hosts without a listen 80 entry) to HTTPS
server {
	listen 80 default_server;
	listen [::]:80 default_server ipv6only=on;

	server_name _;

	# Should never be used, but it should exist to prevent errors
	root /data/www/default;

	return 301 https://$host$request_uri;
}

# vim: set ts=8 sts=8 sw=8 noexpandtab filetype=conf:
